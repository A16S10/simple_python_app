pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "shaikharshad1644/simple_python_app"
        DOCKER_CREDS = credentials('dockerhub_id')
    }
    
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${DOCKER_IMAGE}:${env.BUILD_NUMBER}")
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('', DOCKER_CREDS) {
                        dockerImage.push()
                    }
                }
            }
        }
        
        stage('Run Container') {
            steps {
                script {
                    docker.image("${DOCKER_IMAGE}:${env.BUILD_NUMBER}").run()
                }
            }
        }
    }
}
